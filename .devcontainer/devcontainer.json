{
  "name": "My Todo Dev Container",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "api",
  "workspaceFolder": "/app",

  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "openBrowserOnce"
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.analysis.typeCheckingMode": "basic"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-python.black-formatter"
      ]
    }
  },

  "updateRemoteUserUID": true,

  // In case you tweak requirements locally, re-run inside the container.
  "postCreateCommand": "pip install -r /app/requirements.txt",

  // Use the image's default CMD (uvicorn) rather than override with a shell
  "overrideCommand": false
}
